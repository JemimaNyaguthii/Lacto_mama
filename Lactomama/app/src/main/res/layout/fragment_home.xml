<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:navGraph="@navigation/nav_graph"
    tools:context=".mother.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvTrackingCard"
            android:layout_width="367dp"
            android:layout_height="176dp"
            android:layout_margin="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="#E64980"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="364dp"
                android:layout_height="165dp">

                <TextView
                    android:id="@+id/tvTrackingHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="16dp"
                    android:text="What Youâ€™re Tracking"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvFeeding"
                    android:layout_width="96dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="7dp"

                    android:text="Breastfeeeding times"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/ivFrequency"
                    app:layout_constraintStart_toStartOf="@+id/ivFrequency"
                    app:layout_constraintTop_toTopOf="@+id/tvSleep" />

                <TextView
                    android:id="@+id/tvSleep"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="30dp"
                    android:text="Sleep"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/tvDiaperChange"
                    app:layout_constraintTop_toTopOf="@+id/tvDiaperChange" />

                <TextView
                    android:id="@+id/tvDiaperChange"
                    android:layout_width="64dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="132dp"
                    android:layout_marginBottom="21dp"
                    android:text="Diaper Change"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvFeeding" />

                <ImageView
                    android:id="@+id/ivFrequency"
                    android:layout_width="66dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/frequency"
                    app:layout_constraintBottom_toTopOf="@+id/tvSleep"
                    app:layout_constraintEnd_toStartOf="@+id/ivSleep"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTrackingHeading" />

                <ImageView
                    android:id="@+id/ivSleep"
                    android:layout_width="67dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/sleep"
                    app:layout_constraintStart_toEndOf="@+id/ivFrequency"
                    app:layout_constraintTop_toBottomOf="@+id/tvTrackingHeading" />

                <ImageView
                    android:id="@+id/ivDiaper"
                    android:layout_width="148dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/diaper_select"
                    app:layout_constraintBottom_toTopOf="@+id/tvSleep"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTrackingHeading" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/tvUpcomingAppointments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="92dp"
            android:text="Upcoming Appointments"
            android:textColor="#E64980"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cvTrackingCard"
            app:layout_constraintTop_toBottomOf="@+id/cvTrackingCard" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Appointments"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="#ffff"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUpcomingAppointments">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="368dp"
                android:layout_height="136dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/lactationist"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="14dp"
                    android:text="Dr Rowena"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Lactationist Consultationist"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/tvName" />

                <ImageView
                    android:id="@+id/ivCalendar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/outline_calendar_today_24"
                    app:layout_constraintEnd_toStartOf="@+id/tvCreatedAt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivTime"
                    app:tint="#22DFBA" />

                <TextView
                    android:id="@+id/tvCreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Monday 25 October"
                    app:layout_constraintBottom_toBottomOf="@+id/tvtime"
                    app:layout_constraintStart_toEndOf="@+id/ivCalendar"
                    app:layout_constraintTop_toTopOf="@+id/tvtime" />

                <ImageView
                    android:id="@+id/ivTime"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/outline_access_time_24"
                    app:layout_constraintEnd_toStartOf="@+id/tvtime"
                    app:layout_constraintTop_toBottomOf="@+id/tvRole"
                    app:tint="#22DFBA" />

                <TextView
                    android:id="@+id/tvtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="23dp"
                    android:text="09:00a.m -11:00a.m"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivTime" />

                <ImageView
                    android:id="@+id/ivNotification"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="116dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/outline_notifications_24"
                    app:layout_constraintStart_toEndOf="@+id/tvName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#22DFBA" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="88dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/ivTime"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tvCreatedAt"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticles"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:nestedScrollingEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvArticles" />

        <TextView
            android:id="@+id/tvArticles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="92dp"
            android:text="Articles Recommended For You"
            android:textColor="#E64980"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Appointments" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>